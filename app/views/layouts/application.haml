%html
  %head
    %title SerKnight.com
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/gsap/latest/TweenMax.min.js"}
  %body
    .denver{"data-target" => "#show-em-gusto", "data-toggle" => "modal", :type => "button"}
      %i.fa.fa-file-text-o{"aria-hidden" => "true"}

    #show-em-gusto.modal.fade{"aria-labelledby" => "gusty", :role => "dialog", :tabindex => "-1"}
      .modal-dialog{:role => "document"}
        .modal-content
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
            %h4#gusty.modal-title.text-center Resume
            %h3.text-center Click to download
          .modal-body
            = link_to '/download-resume.pdf', style: 'cursor: copy;' do
              = image_tag asset_url('resume.png')
          .modal-footer.text-center
            %h3.text-center Get in contact
            %a.btn.btn-success{style: 'float: left;width: 30%; padding: 5px; margin: 1.5%;', :href => "mailto:chrisknight.mail@gmail.com?subject=It is not me, its you."} This is weird..
            %a.btn.btn-danger{style: 'float: left;width: 30%; padding: 5px; margin: 1.5%;', :href => "mailto:chrisknight.mail@gmail.com?subject=I'm going to need some ID."} Lets talk!
            %a.btn.btn-primary{style: 'float: left;width: 30%; padding: 5px; margin: 1.5%;', :href => "mailto:chrisknight.mail@gmail.com?subject=Hey, this is the best time to come meet us!"} You're Hired!



    #video-container
      = render partial: 'video_player'
    .header-fix.header-scroll
      .col.col-md-4
        .toph-header-space
          #command-line.cli
            .element
      .col.col-md-4.text-center
        .toph-header-space.toph-name-text
          CHRISTOPHER KNIGHT
      .col.col-md-4#social-header.toph-header-space
        = link_to 'https://medium.com/@Nomadic_Knight', target: '_blank' do              
          %i.fa.fa-medium{"aria-hidden" => "true"}

        = link_to 'https://www.youtube.com/user/EditApartMentality', target: '_blank' do              
          %i.fa.fa-youtube{"aria-hidden" => "true"}

        = link_to 'https://twitter.com/Nomadic_Knight', target: '_blank' do        
          %i.fa.fa-twitter{"aria-hidden" => "true"}

        = link_to 'https://www.linkedin.com/in/serknight', target: '_blank' do              
          %i.fa.fa-linkedin{"aria-hidden" => "true"}
          

    = yield

    .photo-credit
      = link_to "Photo Credit: Instawally", "https://unsplash.com/@instawally", target: '_blank'
      
  